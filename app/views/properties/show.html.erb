
<div class="container">
  <div class="fondo">
  <div class="contenido">
<div class="card-trip">
  <% if @property.image.attached? %>
      <%= image_tag @property.image, crop: :fill, class: "img-fluid" %>
      <% else %>
       <%= image_tag "https://images.unsplash.com/photo-1433849665221-d2f93042ae54?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2089&q=80", crop: :fill, class: "img-fluid" %>
      <% end %>

  <div class="card-trip-infos">
    <div>
      <h3><%= @property.address %></h3>
      <p>Description: <%= @property.state %></p>
      <p>Size: <%= @property.sq_meters %> m2</p>
      <p>Year of construction: <%= @property.year %></p>
      <p>No. of rooms: <%= @property.num_of_rooms %></p>
      <p>Type of property: <%= @property.type_of_property %></p>
    </div>
    <h2 class="card-trip-pricing"><%= @property.rent_price %> Eur/month</h2>

  </div>
</div>
</div>
<div class="pt-4">
<%= link_to 'Back to results', properties_path, class: 'btn btn-ghost'  %>
</div>
</div>
</div>


