<div class="container pt-3">
  <h1 class="titulo">Properties available right now:</h1>
<div class="fondo">
<div class="contenido">
    <% @properties.each do |property| %>
    <%= link_to property_path(property), style: "text-decoration: none; color: black; display: block" do %>
       <div class="card-product mb-3 tarjeta col-xs col-lg">
       <% if property.image.attached? %>
      <%= image_tag property.image, crop: :fill, class: "img-fluid" %>
      <% else %>
       <%= image_tag "https://images.unsplash.com/photo-1433849665221-d2f93042ae54?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2089&q=80", crop: :fill, class: "img-fluid" %>
      <% end %>
    <div class="card-product-infos">
    <h2><%= property.address %></h2>
    <p><%= property.state %></p>


        <strong style="font-size: 14px; opacity: .7;"><i class="fas fa-arrows-alt"></i> <%= property.sq_meters %> m2</strong>
        <br>
        <strong style="font-size: 13px; opacity: .7;"><i class="fas fa-bed"></i> <%= property.num_of_rooms %> Rooms</strong>

      <strong class="precio d-flex"> <%= property.rent_price %> â‚¬/month</strong>



    </div>

    </div>
    <% end %>
    <% end %>
</div>
<%= link_to 'Add new property', new_property_path, class: "btn btn-ghost" %>
</div>
