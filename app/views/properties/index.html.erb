<div class="container">
  HERE ARE ALL OUR AVAILABLE APARTMENTS TO RENT:
<div>
      <div class="card-product">
    <% @properties.each do |property| %>
       <% if property.image.attached? %>
      <%= image_tag property.image, width: 400, height: 200, crop: :fill, class: "img-fluid" %>
      <% else %>
       <%= image_tag "https://images.unsplash.com/photo-1433849665221-d2f93042ae54?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2089&q=80", width: 400, height: 200, crop: :fill, class: "img-fluid" %>
      <% end %>
  <div class="card-product-infos">
    <h2><%= property.address %></h2>
    <p>Product description with <strong>relevant info</strong> only.</p>

  </div>
<% end %>
</div>
  </div>
</div>
<%= link_to 'Create property', new_property_path %>
